q-infinite-scroll.u-contribution-list(:handler="loadPostsScroll", ref="infiniteScroll")
  q-list.flex.posts-list(padding, separator, sparse, no-border, multiline)
    template(v-for="post in posts", v-if="post.parent_permlink === 'utopian-io' && post._category")
      u-post-preview.shadow-2(:post="post")

  // spinner for infinite scroll loading.
  div(slot="message").items-center.justify-center.text-center
    q-spinner-dots(v-if="!noPosts", :size="40", style="margin: 0 auto")
  div(v-if="noPosts").items-center.justify-center.text-center
    // not found illustration.
    p
      // sad face icon.
      img.sad-face(src="~assets/img/sad.svg")

    // not found message.
    p.text-faded
      | Sorry... No contributions were found.