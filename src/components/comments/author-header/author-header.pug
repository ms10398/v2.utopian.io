// component wrapper.
div.u-comments-author-header(@click.self.prevent="")
  // flex container.
  div.flex.no-wrap.header-container(v-if="!loading && account !== null")
    div.avatar
      img(:src="'https://steemitimages.com/u/' + account.name + '/avatar'")
    div.details
      div.username.flex
        div.text()
          span.name(v-if="account._name") {{ account._name }}
          router-link.profile(:to="{ name: 'profile.contributions', params: { username: account.name, category: 'all' } }")
            span.username @{{ account.name }}
        div.reputation
          span {{ account._reputation }}

      //div.name {{ account._name }}
      div.about {{ account._about || 'Utopian Contributor' }}
      div.location {{ account._location || 'Citizen of the World' }}

